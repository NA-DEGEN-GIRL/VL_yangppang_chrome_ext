{
  "manifest_version": 3,
  "name": "Hedge Trading Helper",
  "version": "1.1",
  "description": "Executes opposite orders on Lighter and Variational exchanges.",
  "permissions": [
    "tabs",
    "scripting",
    "storage",
    "sidePanel"
  ],
  "host_permissions": [
    "https://app.lighter.xyz/trade/*",
    "https://omni.variational.io/perpetual/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "images/icon128.png"
    }
  },
  "side_panel": {
    "default_path": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "128": "images/icon128.png"
  }
}